<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_vertical_common"
    android:paddingLeft="@dimen/margin_horizontal_common"
    android:paddingRight="@dimen/margin_horizontal_common"
    android:paddingTop="@dimen/margin_vertical_common"
    tools:context=".pinche.PincheActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/pinche_txt"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="#FF000000"
            android:gravity="center_vertical|center_horizontal"
            android:text="拼车"
            android:textColor="#FFFFFFFF"
            android:textSize="28sp" />

    </LinearLayout>

</LinearLayout>